{
  "compilerOptions": {
    "module": "ES6",
    "skipLibCheck": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "esModuleInterop": true,
    "moduleResolution":"node",
    "types": ["node", "mongoose"]
  },

  "compileOnSave": true,
  "include": ["src"],
  "exclude": ["node_modules"]
}
